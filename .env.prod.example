# ============================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================================
# SECURITY: Copy to .env.prod and change ALL values
# NEVER commit .env.prod to version control
# ============================================================

# Django
DEBUG=False
SECRET_KEY=your-super-secret-key-generate-with-django-get-random-secret-key
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Database
DB_NAME=inventory_db
DB_ROOT_PASSWORD=super-secure-root-password-change-me

# Application user (DML only: SELECT, INSERT, UPDATE, DELETE)
DB_APP_USER=inventory_app
DB_APP_PASSWORD=app-secure-password-change-me

# Migration user (ALL PRIVILEGES - use only for migrations)
DB_MIGRATE_USER=inventory_migrate
DB_MIGRATE_PASSWORD=migrate-secure-password-change-me

# Redis
REDIS_PASSWORD=redis-secure-password-change-me

# SSL (optional - for MySQL SSL)
# DB_SSL_CA=/etc/mysql/ssl/ca.pem
# DB_SSL_CERT=/etc/mysql/ssl/client-cert.pem
# DB_SSL_KEY=/etc/mysql/ssl/client-key.pem
